<UserControl x:Class="HangulClockUIKit.NotoSansLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HangulClockUIKit"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <FontFamily x:Key="NotoSansKRThin">/Resources/#Noto Sans KR Thin</FontFamily>
    </UserControl.Resources>
    <Grid>
        <Label x:Name="label" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="{StaticResource NotoSansKRThin}" FontSize="40" FontWeight="Thin" />
    </Grid>
</UserControl>
