<UserControl x:Class="HangulClockUIKit.MinimalButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HangulClockUIKit"
             mc:Ignorable="d" 
             Width="100" Height="60">
    <UserControl.Resources>
        <FontFamily x:Key="NotoSansKRMedium">/Resources/#Noto Sans KR Medium</FontFamily>
        <FontFamily x:Key="NotoSansKRRegular">/Resources/#Noto Sans KR Regular</FontFamily>
    </UserControl.Resources>
    <Grid MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
        <Rectangle x:Name="buttonBorder" Stroke="White" StrokeThickness="2" Height="40" />
        <Label x:Name="buttonLabel" Foreground="White" Content="테스트" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource NotoSansKRRegular}" FontSize="15" Margin="0, 2.5, 0, 0" />
    </Grid>
</UserControl>
