<Window x:Class="HangulClockUninstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangulClockUninstaller"
        xmlns:loaders="clr-namespace:Loaders;assembly=MrMitch.Loaders"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="한글시계 제거 프로그램" Height="300" Width="500">
    <Grid Loaded="Grid_Loaded">
        <Grid.Resources>
            <Style TargetType="loaders:ChromeLoader">
                <Setter Property="Margin" Value="20" />
                <Setter Property="Thickness" Value="1" />
                <Setter Property="IsIndeterminate" Value="True" />
                <Setter Property="Width" Value="50" />
                <Setter Property="Height" Value="50" />
            </Style>
        </Grid.Resources>
        <loaders:ChromeLoader Foreground="#1091e8"/>
    </Grid>
</Window>
